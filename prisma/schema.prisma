datasource db {
  provider = "sqlite" // Base de datos local (puedes cambiarla m√°s tarde)
  url      = "file:./dev.db" // Archivo SQLite
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String // Valores: Admin, Regular, Superadmin
}

model Product {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
  precio      Float
  cantidad    Int
}
